@model MiniLojaVirtual.Web.ViewModels.Products.ProductItemViewModel

@{
    ViewData["Title"] = $"Excluir {Model.Name}?";
}

<h3>Tem certeza de que deseja excluir o produto @Model.Name?</h3>
<div>
	<h4>Produto</h4>
	<hr/>
	<dl class="row">
		<dt class="col-sm-2">
			Categoria
		</dt>
		<dd class="col-sm-10">
			@Model.CategoryName
		</dd>
		<dt class="col-sm-2">
			Produto
		</dt>
		<dd class="col-sm-10">
			@Model.Name
		</dd>
		<dt class="col-sm-2">
			Descrição
		</dt>
		<dd class="col-sm-10">
			@Model.Description
		</dd>
		<dt class="col-sm-2">
			Foto
		</dt>
		<dd class="col-sm-10">
			@if (!string.IsNullOrEmpty(Model.ImageUrl))
			{
				<img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 50px; max-height: 50px;" />
			}
			else
			{
				<span class="text-muted">Sem imagem</span>
			}
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Code"/>
		<input type="submit" value="Delete" class="btn btn-danger"/>
		<a asp-action="Index" class="btn btn-outline-info">Voltar</a>
	</form>
</div>
