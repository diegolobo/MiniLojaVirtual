@model IEnumerable<MiniLojaVirtual.Infrastructure.Entities.Products.CategoryEntity>

@{
	ViewData["Title"] = "Categorias";
}

<h1>@ViewData["Title"]</h1>

<p>
	<a asp-action="Create" class="btn btn-primary"><spam class="fa fa-plus"></spam> Nova</a>
</p>

<table class="table table-hover">
	<thead>
	<tr>
		<th>
			Nome
		</th>
		<th>
			Descrição
		</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model) {
		<tr>
			<td>
				@item.Name
			</td>
			<td>
				@item.Description
			</td>
			<td>
				<a asp-action="Details" asp-route-code="@item.Code" class="p-2"><spam class="fa fa-search" /></a>
				<a asp-action="Edit" asp-route-code="@item.Code" class="p-2"><spam class="fa fa-pencil-alt" /></a>
				<a asp-action="Delete" asp-route-code="@item.Code" class="p-2"><spam class="fa fa-trash" /></a>
			</td>
		</tr>
	}
	</tbody>
</table>